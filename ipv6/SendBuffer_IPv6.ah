#pragma once

#include "../router/Interface.h"
#include "ipstack/SendBuffer.h"
#include "IPv6.h"
#include "IPv6onSockets.h"
#include "util/types.h"

using namespace ipstack;

/**
 * Set the IPv6 header
 */
aspect Sendbuffer_IPv6 {
	advice execution("% ipstack::%_Socket::estimateSendBufferMinSize()") && result(v) :
		after(unsigned v) {
		// check ip version
		if (tjp->that()->m_useipversion == 6) {
			*tjp->result() = v + tjp->that()->ipv6.getSpecificHeaderSize();
// 			printf("Sendbuffer_IPv6 size\n");
		}
	}

	advice execution("% ipstack::%_Socket::prepareSendBuffer(...)") && args(sendbuffer) :
		around(SendBuffer* sendbuffer) {

		// check ip version
		if (tjp->that()->m_useipversion == 6) {
// 			printf("Sendbuffer_IPv6 content\n");
			IPV6& ipv6 = tjp->that()->ipv6;
			UInt16Opt headersize = ipv6.getSpecificHeaderSize();
			sendbuffer->memstart_ip = sendbuffer->getDataPointer();
			IPv6_Packet* ip = (IPv6_Packet*)sendbuffer->memstart_ip;
			ipv6.setupHeader(ip, sendbuffer->getRemainingSize());
			sendbuffer->writtenToDataPointer(headersize);
			// set pointer to next header field
			sendbuffer->nextheaderfield_ip = ip->get_nextheaderPointer();
		}
		tjp->proceed();
	}
};
