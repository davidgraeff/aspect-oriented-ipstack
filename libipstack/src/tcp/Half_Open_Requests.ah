#pragma once

#include "Half_Open_Requests.h"
#include "memory_management/Mempool_Config.h"

using namespace ipstack;

aspect tcphalfopen_DerivedSocket_Mem {
	advice "ipstack::Management_Task" : slice class {
	private:
		static MemoryInterface& get_mem_tcphalfopen() {
			static ManagementSocketMemory mem;
			return mem;
		}
	public:
		Half_Open_Requests& get_socket_tcphalfopen() {
			static Half_Open_Requests socket(get_mem_tcphalfopen());
			return socket;
		}
	};
};
