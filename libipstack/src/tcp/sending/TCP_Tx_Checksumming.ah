#pragma once

#include "ip/InternetChecksum.h"
#include "tcp/TCP_Segment.h"
#include "router/sendbuffer/SendBuffer.h"
#include "router/Interface.h"

using namespace ipstack;

aspect TCP_Tx_Checksumming {
	advice execution("% ipstack::%TCP_Socket::send(...)") && args(dataToSend) :
		before(SendBuffer* dataToSend) {

		TCP_Segment* tcp = (TCP_Segment*) dataToSend->p.transport_packet;

		Interface* interface = dataToSend->getInterface();
		uint16_t payloadsize = ((char*)dataToSend->data - (char*)dataToSend->p.transport_packet);
		tcp->set_checksum(0);
		tcp->set_checksum(tcp->calc_checksum(InternetChecksum::computePseudoHeader(dataToSend->p.ip_packet, payloadsize, TCP_Segment::IP_TYPE_TCP), payloadsize, interface));

	}
};
