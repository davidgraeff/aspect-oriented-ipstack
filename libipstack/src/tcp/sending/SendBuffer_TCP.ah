#pragma once

#include "router/Interface.h"
//#include "TCP_Sendbuffer_Slice.ah"
#include "TCP_Socket.h"
#include "TCP_Segment.h"
#include "router/sendbuffer/SendBuffer.h"
#include "util/ipstack_inttypes.h"

using namespace ipstack;

/**
 * Set TCP as next header protocol in the the IPv4 Header.
 * We do not need to add a TCP Header here, that is done in the
 * TCP Socket. The Sendbuffer API is therefore not usable outside
 * of the TCP Socket class.
 */
aspect Sendbuffer_TCP  {
	// First add the IP Header after that execute this TCP aspect
	advice execution("void ipstack::SendbufferIP::prepareSendBuffer(...)") : order("Sendbuffer_IPv%" , "Sendbuffer_TCP");

	advice execution("void ipstack::SendbufferIP::prepareSendBuffer(...)") && args(sendbuffer, ip, use_as_response) :
		around(SendBuffer* sendbuffer, IP& ip, ReceiveBuffer* use_as_response) {
		// set ip next header protocol to TCP
		*(sendbuffer->p.nextheaderfield_ip) = TCP_Segment::IP_TYPE_TCP;
		sendbuffer->p.transport_packet = sendbuffer->getDataPointer();
	}
};
