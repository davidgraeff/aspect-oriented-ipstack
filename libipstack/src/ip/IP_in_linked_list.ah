#pragma once

#include "util/ipstack_inttypes.h"
using namespace ipstack;

/* 
* We need a linked list over all IP objects to be able to change/invalidate the nexthop cache
* and the src IP entry (if an assigned IP address expired or is removed).
* 
* This feature is only needed, if entries can expire.
*/
aspect IP_in_linked_list {
public:
	advice "ipstack::IP" : baseclass ("LinkedList<IP, true>");
};