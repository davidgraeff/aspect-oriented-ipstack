#pragma once

#include "util/ipstack_inttypes.h"
#include "ndp/router/NDPRouterMessages.h"
#include "icmpv6/ICMPv6_Socket.h"
#include "ipv6/IPv6AddressUtilities.h"
#include "ip/ndpcache/NDPCacheEntry.h"
#include "router/Interface.h"
#include "demux/Demux.h"

aspect NDP_RefreshNDPCache_RouterEntries {
	/**
	 * Overwrite behaviour: We send a Router Solicitation message if
	 * a ndp cache entry for an entry (router) is going to expire. The Router Advertisement message
	 * will refresh the ndp cache entry.
	 */
	advice execution("% ipstack::Interface::router_entry_refresh(...)") && args(entry) :
		around(NDPCacheEntry* entry) {

		// Only do something for IPv6 neighbour entry routers
		if (!entry->state.ip6) {
			tjp->proceed();
			return;
		}
		
		// Send solicitation message for this specific router, not a multicast message
		NDPRouterMessages::send_router_solicitation(entry->ipv6, entry->interface);
	}
};

