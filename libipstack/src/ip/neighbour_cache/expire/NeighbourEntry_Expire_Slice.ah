#pragma once

#include "util/ipstack_inttypes.h"

using namespace ipstack;

/**
  * Add another member variable to the NDPCacheEntry struct.
  * expire_value is a number that indicates the usage of an entry. If
  * an entry is not used often it may get a lower number over time.
  * The exact strategy is defined in the according aspects.
  */
slice class NDPCacheEntry_Expire_Slice
{
	public:
	// The purpose of this byte is defined by the strategy that is used to expire values
	uint8_t expire_value;
	// importance
	enum NDPCacheEntryImportance {
		IMPORTANCE_not_important = 0, IMPORTANCE_good_to_know = 50,
		IMPORTANCE_solicitation_renew = 70, IMPORTANCE_router = 100,
		IMPORTANCE_important = 128, IMPORTANCE_always_keep = 255
	};
};
