#pragma once
#include "util/ipstack_inttypes.h"

using namespace ipstack;

aspect SendBufferIP_free_if_failed {
	advice execution("ipstack::SendBufferIP* ipstack::SendBufferIP::requestIPBuffer(ipstack::SocketMemory*, ...)")
		&& args(mem) && result(s) : after(SocketMemory* mem, Sendbuffer* s) {
		if (s && s->getState()!=SendBuffer::WritingState) {
			mem->free(s);
			*tjp->result() = 0;
		}
	}
};
