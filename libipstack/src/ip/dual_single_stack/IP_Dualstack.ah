#pragma once
#include "util/ipstack_inttypes.h"

aspect IP_Dualstack_Socket_Delegation {
	/**
	 * Every socket gets an m_useipversion variable
	 * for deciding at runtime which ip version to use, if the
	 * generic api is used.
	 */
	advice "ipstack::%_Socket" : slice class {
	public:
		uint8_t m_useipversion;
	};
	
	/**
	 * The m_useipversion variables in the socket classes are modified
	 * by pointers to that variable within IPv4 and IPv6 classes.
	 */
	advice "ipstack::IPV%" : slice class {
	public:
		uint8_t* m_useipversionPtr;
	};
};

