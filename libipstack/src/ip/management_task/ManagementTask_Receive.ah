#pragma once

using namespace ipstack;

/**
 * Conflicts with ReceiveDemuxCallbackAspect. Instead of checking all ReceiveDemuxCallback objects
 * after demux(...) we do that in the Management Task loop.
 */
aspect management_sockets_receive  {
	advice execution("% ipstack::Management_Task::runIteration()") : after() {
		ReceiveDemuxCallback* next = ReceiveDemuxCallback::receivedFrame;
		while (next) {
			next->checkReceived();
			next = next->getNext();
		}
	}
};
