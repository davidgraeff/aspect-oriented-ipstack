#pragma once
#include "demux/receivebuffer/SmartReceiveBufferPtr.h"
#include "ReceiveDemuxCallback.h"

using namespace ipstack;

/**
 * Only apply this aspect if the managed sockets do not live in a seperate task!
 */
aspect ReceiveDemuxCallbackAspect {
	advice execution("% ipstack::Demux::demux(...)") : after() {
		ReceiveDemuxCallback* next = ReceiveDemuxCallback::receivedFrame;
		while (next) {
			next->checkReceived();
			next = next->getNext();
		}
	}
};
