#pragma once

#include "os_integration/System.h"
#include <iostream>

using namespace ipstack;

/**
  * Halt system if we enter the demux method again while we are in the process of receiving a packet.
  * We are not reantrant safe!
  */
aspect ProtectReceiving {
	bool receiving;
	
	advice execution("% ipstack::Demux::demux(...)") : before() {
		if (receiving) {
			std::cout << "Fatal: Demux is not reantrant safe!" << std::endl;
			System::haltsystem();
		}
		receiving = true;
		std::cout << "Reschedule protect: receiving!" << std::endl;
	}
	
	advice construction("ipstack::Demux") : before() {
		receiving = false;
		std::cout << "Reschedule protect: on!" << std::endl;
	}
};
