#pragma once
#include "IPv6iphc.h"
#include "ipv6/IPv6.h"
#include "ipv6/IPv6onSockets.h"
#include "ipv6/IPv6AddressUtilities.h"
#include "util/types.h"

using namespace ipstack;

aspect IPv6hc_mulricast_dest_addr_4 {
	advice execution("% ipstack::IPv6hc_Packet::getWriteMulticastDestHeaderSize(...)"):
	around() {
		*(tjp->result()) = 4;
	}
	advice execution("void ipstack::IPv6hc_Packet::write_compressed_dst_ipaddr(...)") && that(ipv6hc) && args(addr, writePtr, flagbyte):
		around(const ipv6addr& addr, UInt8* writePtr, UInt8& flagbyte, IPv6hc_Packet& ipv6hc) {
			writePtr[0] = addr.ipaddrB8[12];
			writePtr[1] = addr.ipaddrB8[13];
			writePtr[2] = addr.ipaddrB8[14];
			writePtr[3] = addr.ipaddrB8[15];
			flagbyte |= 0x01;
	}
};

