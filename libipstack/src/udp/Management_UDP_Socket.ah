#pragma once

#include <inttypes.h>
#include "Management_UDP_Socket.h"

using namespace ipstack;

/**
 * Management_UDP_Socket support
 */
aspect Management_UDP_Socket_Aspect  {
	// Initialize this management socket -> we have to do this because the
	// global constructor of this class is not called
	advice execution( "void ipstack::System::init()" ) : after() {
		new(&(Management_UDP_Socket::instance())) Management_UDP_Socket;
	}
};
