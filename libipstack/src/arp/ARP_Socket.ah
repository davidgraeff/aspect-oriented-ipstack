#pragma once

#include "ARP_Socket.h"
#include "memory_management/Mempool_Config.h"

using namespace ipstack;

aspect ARP_Socket_Mem {
	advice "ipstack::Management_Task" : slice class {
	private:
		static MemoryInterface& get_mem_arp() {
			static ManagementSocketMemory mem;
			return mem;
		}
	public:
		ARP_Socket& get_socket_arp() {
			static ARP_Socket socket(get_mem_arp());
			return socket;
		}
	};
};
