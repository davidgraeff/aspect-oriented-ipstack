#pragma once
#include <inttypes.h>
#include <string.h>
#include "stdio.h"

/**
  * Print a message for all entered demux methods.
  */
aspect ipstack_debug_incoming_aspect {
	advice execution("% ipstack::%::%_demux%(...)") : around() {
		char sig[200] = {0};
		strcpy(sig, tjp->signature());
		char* d = strchr(sig, '(');
		if (d)
			*d = 0;
		printf( "Demux: %s\n", sig );
		tjp->proceed();
	}
};
