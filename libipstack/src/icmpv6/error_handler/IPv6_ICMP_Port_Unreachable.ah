#pragma once
#include "ICMPv6_ErrorType.h"

using namespace ipstack;

/**
  * UDP Port unreachable: Send icmp error message
  */
aspect IPv6_ICMP_Port_Unreachable {
	advice execution("void ipstack::Demux::error_port_not_reachable_v6(ipstack::ReceiveBuffer&)") &&
	args(buffer) : around(ReceiveBuffer& buffer) {
		ICMPv6_ErrorReply::send(buffer, ICMPv6_Packet::ICMP_TYPE_DESTINATION_UNREACHABLE,
			ICMPv6_Packet::ICMP_CODE_PORT_UNREACHABLE, 
			0);
	}
};
