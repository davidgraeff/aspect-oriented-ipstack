#pragma once
#include "ICMPv6_ErrorType.h"

using namespace ipstack;

/**
  * Header option unknown: Send icmp error message
  */
aspect IPv6_ICMP_Option_Unknown {
	advice execution("void ipstack::Demux::error_option_unknown_v6(ipstack::ReceiveBuffer&)") &&
	args(buffer) : around(ReceiveBuffer& buffer) {
		ICMPv6_ErrorReply::send(buffer, ICMPv6_Packet::ICMP_TYPE_PARAMETER_PROBLEM,
			ICMPv6_Packet::ICMP_CODE_PARAMETER_PROBLEM_UNKNOWN_OPTION, 
			0);  // todo: set to 0, should point to the option
	}
};
