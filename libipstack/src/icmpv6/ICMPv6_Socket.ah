#pragma once

#include "util/types.h"
#include "ICMPv6_Socket.h"

using namespace ipstack;

/**
 * ICMPv6 support
 */
aspect IPCMPv6_aspect  {
	// Initialize this management socket -> we have to do this because the
	// global constructor of this class is not called
	advice execution( "void os::init()" ) : after() {
		new(&(ICMPv6_Socket::instance())) ICMPv6_Socket;
	}
};
