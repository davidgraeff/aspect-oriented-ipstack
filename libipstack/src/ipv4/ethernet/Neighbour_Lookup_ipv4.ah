#pragma once

#include "router/Interface.h"
#include "arp/addr_resolve_ipv4/AddressResolutionIPv4.h"
#include "ethernet/Eth_Frame.h"
#include "ethernet/EthernetAddressUtilities.h"
#include "router/Router.h"
#include "router/sendbuffer/SendBuffer.h"

using namespace ipstack;

aspect Neighbour_Lookup_ipv4 {
	// We want to provide a lookup of ethernet addresses for IP sockets.
	pointcut prepareSendBuffer_IP_only() = execution("void ipstack::SendbufferIP::prepareSendBuffer(...)");

	advice prepareSendBuffer_IP_only() : order("Sendbuffer_IPv%", "Neighbour_Lookup_ipv4");
	advice prepareSendBuffer_IP_only() && args(sendbuffer, ip, use_as_response) :
		around(SendBuffer* sendbuffer, IP& ip, ReceiveBuffer* use_as_response) {

		// check ip version
		if (ip.m_useipversion == 4 && (sendbuffer->getState() & SendBuffer::ResolveLinkLayerStateOption)) {
			IPv4_Packet* ip = (IPv4_Packet*)sendbuffer->p.ip_packet;
			Eth_Frame* eth_frame = (Eth_Frame*)(sendbuffer->p.ethernet_frame);
			Interface* interface = sendbuffer->getInterface();

			const uint8_t* dst_hw_addr = AddressResolutionIPv4::lookup(ip->get_dst_ipaddr(), interface);
			if (dst_hw_addr == 0) {
				sendbuffer->setState(SendBuffer::InvalidState);
				return; //don't send this packet: destination MAC address unknown!
			}

			eth_frame->set_dst_hwaddr(dst_hw_addr);
			// Restore writing state (may be resetted by other aspects)
			sendbuffer->setState(SendBuffer::WritingState);
		}
		tjp->proceed();
	}
};
