#pragma once

#include "operating_system_integration/System.h"
#include <iostream>

using namespace ipstack;

/**
  * Halt system if a reschedule is requested within the ipstack while we are in the process of receiving a packet.
  * (This should not happen actually)
  */
aspect ProtectRescheduleReceiving {
	bool receiving;
	
	advice execution( "void ipstack::System::init()" ) : after() {
		receiving = false;
	}
	
	advice execution("% ipstack::Demux::demux(...)") : before() {
		receiving = true;
		std::cout << "Reschedule protect: receiving!" << std::endl;
	}
	
	advice construction("ipstack::Demux") : after() {
		receiving = false;
		std::cout << "Reschedule protect: on!" << std::endl;
	}

	advice execution("% AS::Schedule()") : before() {
		if (!receiving)
			return;
		std::cout << "Fatal: A reschedule is requested while receiving!" << std::endl;
		System::haltsystem();
	}
};
