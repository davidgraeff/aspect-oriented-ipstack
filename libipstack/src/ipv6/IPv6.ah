#pragma once

#include "router/sendbuffer/Router_IPv6_Slice.ah"
#include "Interface_IPv6_Slice.ah"
#include "Socket_IPv6_Slice.ah"

using namespace ipstack;

aspect IPv6 {
	/* Affect class: Interface */
	advice "ipstack::Interface" : slice Interface_IPv6_Slice;

	/* Affect class: Router */
	advice "ipstack::Router" : slice Router_IPv6_Slice;
	
	/* Add ipv6 member to each socket object */
	advice "ipstack::%_Socket" : slice Socket_IPv6_Slice;
	
	advice execution("void ipstack::NeighbourCache::removeRouter(ipstack::NeighbourEntry*,%)") && args(entry, position) :
		around(NeighbourEntry* entry, EntryPosition position) {
		// Free all address prefixes that belong to this router
		uint8_t nextEntry = 0;
		while (AddressEntry* addressentry = entry->interface->assignedAddresses.findEntry(&nextEntry)) {
			if (addressentry->routerEntryPosition == position)
				entry->interface->assignedAddresses.freeEntry(addressentry);
		}
	}
};
