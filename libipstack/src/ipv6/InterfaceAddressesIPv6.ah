#pragma once

using namespace ipstack;

aspect InterfacePrefixesAspect {
	advice execution("void ipstack::NeighbourCache::removeRouter(ipstack::NeighbourEntry*,%)") && args(entry, position) :
		around(NeighbourEntry* entry, EntryPosition position) {
		// Free all address prefixes that belong to this router
		uint8_t nextEntry = 0;
		while (AddressEntryIPv6* AddressEntryIPv6 = entry->interface->ipv6.getAddress(&nextEntry)) {
			if (AddressEntryIPv6->routerEntryPosition == position)
				entry->interface->ipv6.freeAddress(AddressEntryIPv6);
		}
	}
};
