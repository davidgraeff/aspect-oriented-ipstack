#pragma once

#include "../IPv4.h"
#include "../InternetChecksum.h"
#include "ipstack/tcp/TCP.h"
#include "ipstack/SendBuffer.h"

using namespace ipstack;

aspect IPv4_TCP_Tx_Checksumming {
	advice execution("% ipstack::%TCP_Socket::send(...)") && args(sendbuffer, interface) :
	before(SendBuffer* sendbuffer, Interface* interface) {
		if (tjp->that()->m_useipversion != 4) {
			return;
		}
		
		IPv4_Packet* packet = (IPv4_Packet*)sendbuffer->memstart_ip;
		TCP_Segment* tcp = (TCP_Segment*) sendbuffer->memstart_transport;
		
		UInt16 payloadsize = ((char*)sendbuffer->data - (char*)sendbuffer->memstart_transport);
		UInt16 csum = InternetChecksumV4::compute(packet, payloadsize, interface);
		tcp->set_checksum(csum); // store checksum in TCP checksum field
	}
};
