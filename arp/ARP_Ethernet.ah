#ifndef __ARP_ETHERNET_AH__
#define __ARP_ETHERNET_AH__

#include "../Eth_Frame.h"
#include "../demux/Demux.h"
#include "../router/Interface.h"
#include "ARP.h"
#include "util/types.h"

using namespace ipstack;


aspect ARP_Ethernet {

  /* Affect class: Demux. ARP is only defined on ethernet link layer -> Use ethernet_demux. */  
  advice execution("void ipstack::Demux::ethernet_demux(...)") &&
         args(data, len, interface, type) && that(demux) :
         after(const void* data, unsigned len, Interface* interface, UInt16 type, Demux& demux){

	if(type != ARP_Packet::ETH_TYPE_ARP)
	  return;

	ARP_Packet* packet = (ARP_Packet*) data;
      
        if(len < ARP_Packet::ARP_HEADER_SIZE)
          return; //packet too small!
      
        if(packet->get_hw_type() != ARP_Packet::ARP_HW_TYPE_ETH)
	  return; //we do not have an ARP packet over Ethernet

	demux.arp_demux(packet, len, interface);
  }
};

#endif // __ARP_ETHERNET_AH__
